<div>
    <div>
        <h2>Edit a post</h2>
    </div>
    <form id="edit-post" class="form-border">
        <div class="form-title">
            <input type="hidden" name="post-id" value="{{post.id}}">
            <label for="edit-post-title">Title</label>
            <input type="text" name = "edit-post-title" value="{{post.title}}" class="title">
        </div>
        <div class="form-body">
            <label for="edit-post-body" class="label"> edit post </label>
            <textarea name="edit-post-body" id="formInput" cols="30" rows="10">{{post.body}}</textarea>
            <div class="button-wrap">
            <button type="submit" class="submitButton">Update</button>
            <button type="button" id="delete">Delete</button>
            </div>
            
        </div>
    </form>
</div>

<script src="/js/editPost.js"></script>